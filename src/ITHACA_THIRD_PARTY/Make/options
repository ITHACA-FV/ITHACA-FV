    -I$(LIB_ITHACA_SRC)/thirdparty/Eigen \
    -I$(LIB_ITHACA_SRC)/thirdparty/redsvd \
    -std=c++11 \
    -w \
    -Wno-old-style-cast \
    -Wno-non-virtual-dtor \
    -Wno-return-type \
    -Wno-sign-compare

