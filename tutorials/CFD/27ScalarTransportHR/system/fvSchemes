FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ddtSchemes
{
    default         Euler;
}

gradSchemes
{
    default         Gauss linear;
}

divSchemes
{
    default         none;
    div(phi,T)      Gauss linear;
    div(phi,U)      Gauss linear;
    div(sphi,S)     Gauss linear;
}

laplacianSchemes
{
    default         none;
    laplacian(DT,T) Gauss linear corrected;
    //laplacian(DT,U) Gauss linear corrected;
    laplacian(DT,S) Gauss linear corrected;
}

interpolationSchemes
{
    default         linear;
}

snGradSchemes
{
    default         corrected;
}


