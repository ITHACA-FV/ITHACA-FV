(
U_pod
p_pod
);

U_pod
{
// Specify the field name
field_name U;
// Specify the number of modes you want to extract
nmodes 2;
// Specify the type of field (if vector or scalar)
field_type vector;
}

p_pod
{
// Specify the field name
field_name p;
// Specify the number of modes you want to extract
nmodes 2;
// Specify the type of field (if vector or scalar)
field_type scalar;
}

