FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      turbulenceProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

simulationType LES;

LES
{
    LESModel        Smagorinsky;
    delta           cubeRootVol;
    turbulence      on;
    printCoeffs     on;

    SmagorinskyCoeffs
    {
        Cs          0.17;   // Costante di Smagorinsky (tipica: 0.1 - 0.2)
        Prt         0.9;    // Numero di Prandtl turbolento (default: 0.9)
    }
}



