FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      ITHACAdict;
}

// EigenValue solver, can be eigen or spectra
EigenSolver eigen;

// Stabilization, can be supremizer or PPE
Stabilization supremizer;

// Number of modes to output and to use for projection
NmodesU 8;
NmodesP 8;
NmodesSUP 8;
NmodesNUT 8;
NmodesProject 30;
NmodesMatrixRec 7;
tolerance  1e-3;
maxIter    500;

// Boundary method
BCMethod lift;

// eddy viscosity coefficients computation method
viscDict 
{   
    package mathtoolbox; // mathtoolbox or splinter
    normalize true; // true or false, normalize data before interpolation

    // RBF parameters
    algorithm RBF; // RBF for splinter, RBF or GPR for mathtoolbox.
    kernel inverse_quadratic; 
    // RBF kernels: linear, cubic, quintic, thin_plate_spline, 
    // gaussian, multiquadric, inverse_multiquadric, inverse_quadratic
    regularization false; // true or false, only for mathtoolbox RBF
    polynomial false; // true or false, only for mathtoolbox RBF
    lambda 1e-6; // regularization parameter, only for mathtoolbox RBF
    epsilon 0.5; // shape parameter, for both mathtoolbox and splinter RBF

    // // GPR hyperparameters, only for mathtoolbox GPR
    // algorithm GPR;
    // kernel matern;
    // // GPR kernels: matern, squared_exp
    // optimizeHyperparams true; // true or false
    // kernelScale 0.1; // initial kernel scale
    // lengthScale 0.1; // initial length scale
    // noise 1e-5; // initial noise level
};

// Export Reduced Matrices
exportPython 1;
exportMatlab 1;
exportTxt 1;

// Output format to save market vectors.
OutPrecision 20;
OutType fixed;
