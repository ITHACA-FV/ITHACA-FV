FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      blockMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

backgroundMesh
{
    xMin    -4;
    xMax    30;
    yMin    -5;
    yMax     5;
    zMin    -0.1;
    zMax     0.1;
    xCells  100;
    yCells  40;
    zCells  1;
}

/*
